@page
@model Server.Pages.Games.EditModel

@{
    ViewData["Title"] = "Edit";
}

<body class="bg">
    <div id="mainshape">
        <h1>Edit</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TblGames.Id" />
                    <div class="form-group">
                        <label asp-for="TblGames.PlayerId" class="control-label"></label>
                        <input asp-for="TblGames.PlayerId" class="form-control" />
                        <span asp-validation-for="TblGames.PlayerId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TblGames.PlayerName" class="control-label"></label>
                        <input asp-for="TblGames.PlayerName" class="form-control" />
                        <span asp-validation-for="TblGames.PlayerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TblGames.Score" class="control-label"></label>
                        <input asp-for="TblGames.Score" class="form-control" />
                        <span asp-validation-for="TblGames.Score" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TblGames.Date" class="control-label"></label>
                        <input asp-for="TblGames.Date" class="form-control" />
                        <span asp-validation-for="TblGames.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="./Index" style="color: black">Back to List</a>
        </div>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
