@page
@model Server.Pages.Games.GamesByPlayerQuery

@{
    ViewData["Title"] = "Index";
}

<body class="bg">
    <div id="mainshape">
        <h2>Games List by player name</h2>
        <br /><br />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TblGames[0].PlayerId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TblGames[0].PlayerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TblGames[0].Score)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TblGames[0].Date)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TblGames)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlayerId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlayerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Score)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <a asp-page="/Games/index" style="color: black">Back</a>

    </div>
</body>