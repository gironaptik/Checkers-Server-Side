@page
@model Server.Pages.Players.IndexModel

@{
    ViewData["Title"] = "Players";
}
<body class="bg">
    <div id="mainshape">
        <h1>Players List</h1>
        <br /><br />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TblPlayers[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TblPlayers[0].Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TblPlayers[0].NumOfGames)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TblPlayers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumOfGames)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </body>